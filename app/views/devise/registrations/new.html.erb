<h2>アカウントを作成</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name, t('activerecord.attributes.user.name') %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :email, t('activerecord.attributes.user.email') %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :phone_number, t('activerecord.attributes.user.phone_number') %><br />
    <%= f.text_field :phone_number, autocomplete: "tel" %>
  </div>

  <div class="field">
    <%= f.label :birthdate, t('activerecord.attributes.user.birthdate') %><br />
    <%= f.date_field :birthdate, autocomplete: "bdate" %>
  </div>

<div class="field">
  <%= f.label :beebits_name, t('activerecord.attributes.user.beebits_name') %><br />
  <div id="beebits_name_input_wrapper">
    <span id="at_symbol">@</span>
    <%= f.text_field :beebits_name, id: 'beebits_name_input', autocomplete: 'off' %>
  </div>
</div>


  <div class="field">
    <%= f.label :password, t('activerecord.attributes.user.password') %>
    <% if @minimum_password_length %>
      <em>※<%= @minimum_password_length %>文字以上</em><br>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, t('activerecord.attributes.user.password_confirmation') %><br>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "登録" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
