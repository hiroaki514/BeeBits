<h1>Timelines#index</h1>

<p>Welcome, <%= current_user.name %>!</p>
<p>あなたのID名は <%= current_user.beebits_name %></p>

<div>
  <%= form_with(model: @post, url: timelines_path, local: true) do |form| %>
    <div>
      <%= form.label :post_content, "投稿内容:" %>
      <%= form.text_area :post_content, rows: 4 %>
      <%= form.submit "投稿する" %>
    </div>
  <% end %>
</div>

<div>
  <% @posts.each do |post| %>
    <div>
      <p><strong><%= post.user.name %></strong>: <%= post.post_content %></p>
    </div>
  <% end %>
</div>

<%= button_to "ログアウト", destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure?' } %>
